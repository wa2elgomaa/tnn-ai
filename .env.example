
CMS_BASE_URL=https://api.sandbox.thenational.arcpublishing.com
ARTICLE_API=/draft/v1/story/{articleId}/revision/draft
CMS_TOKEN=

TAGS_CSV=./data/tags.csv

EMBEDDING_MODEL=intfloat/e5-base-v2
HF_HUB_OFFLINE=0
# Optional cross-encoder reranker (set USE_CROSS_ENCODER=true and ensure model is available)
USE_CROSS_ENCODER=true
CROSS_ENCODER_MODEL=cross-encoder/ms-marco-MiniLM-L-6-v2

TOKENIZERS_PARALLELISM=false
UVICORN_NO_HTTP_TOOLS=1
UVICORN_NO_UVLOOP=1

# Storage directory for index & caches
STORAGE_DIR=./storage

# CPU is default; if you have a GPU and a Torch build with CUDA
DEVICE=cpu

# Normalize Arabic text (diacritics/variants) before embedding
NORMALIZE_ARABIC=false


# debugging level
TRANSFORMERS_VERBOSITY=info
LOG_LEVEL=debug